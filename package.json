{
  "name": "project",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run api:build",
    "start": "npm run api:start",
    "stop": "npm run api:stop",
    "dev": "npm run api:start:watch && npm run api:build:watch",
    "logs": "pm2 logs",
    "monitor": "pm2 monit",
    "kill": "npm run api:kill",
    "api:build": "tsc --project ./api/tsconfig.json",
    "api:build:watch": "npm run api:build -- --watch --preserveWatchOutput",
    "api:start": "pm2 start --name api ./api/.dist/index.js",
    "api:start:watch": "npm run api:start -- --watch",
    "api:stop": "pm2 stop api",
    "api:kill": "pm2 delete api"
  },
  "dependencies": {
    "@types/node": "16.7.10",
    "pm2": "5.1.1",
    "typescript": "4.4.2"
  }
}
